---
import { supportedConsoles } from "$lib/data/consoles";
import Image from "astro/components/Image.astro";
---

<div class="container mx-auto flex gap-4 flex-wrap">
    {
        supportedConsoles.map((e) => {
            return (
                <a href={e.playUrl} class="text-white rounded cursor-pointer flex gap-2 w-fit p-3" style={`background-color: ${e.color};`}>
                    <Image
                        height={32}
                        width={32}
                        src={e.imgUrl}
                        alt="controller"
                    />
                    Play {e.name}
                </a>
            );
        })
    }
</div>
