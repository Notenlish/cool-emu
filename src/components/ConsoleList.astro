---
import { supportedConsoles } from "$lib/data/consoles";
import Image from "astro/components/Image.astro";
import { Button } from "$lib/components/ui/button";
---

<div class="bg-slate-50 pt-8">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold mb-6">
            Consoles Available for Emulation
        </h2>
        <div class="flex flex-wrap gap-4">
            {
                supportedConsoles.map((e) => {
                    return (
                        <Button
                            variant="link"
                            href={e.playUrl}
                            class="text-white rounded cursor-pointer flex gap-2 w-fit p-3"
                            style={`background-color: ${e.color};`}
                        >
                            <Image
                                height={32}
                                width={32}
                                src={e.imgUrl}
                                alt="controller"
                            />
                            Play {e.name}
                        </Button>
                    );
                })
            }
        </div>
    </div>
</div>
