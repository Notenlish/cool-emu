<div class="h-3/5 grid place-content-center mb-12">
    <div class="container mx-auto grid place-content-center relative">
        <div class="h-0">
            <img
                src="/trophy-pixelated.svg"
                alt="trophy"
                class="hover top-1/4 -left-2/10 size-12 opacity-60"
            />
            <img
                src="/archery-pixelated.svg"
                alt="trophy"
                class="absolute -bottom-1/8 -left-1/12 size-12 opacity-60 animate-[hoverAnim_0.76s_ease-in-out_0.3s_infinite_alternate]"
            />
            <img
                src="/star-pixelated.svg"
                alt="Pixelated Controller"
                class="absolute top-3/6 -right-34 size-12 opacity-60 animate-[hoverAnim_1.6s_ease-in-out_0.2s_infinite_alternate]"
            />
            <img
                src="/sword-pixelated.svg"
                alt="Pixelated Sword"
                class="rotate-180 absolute -top-1/8 right-24 size-12 opacity-60 animate-[hoverAnim_1.8s_ease-in-out_0.1s_infinite_alternate]"
            />
        </div>
        <div class="flex flex-col items-center">
            <div class="mb-8">
                <h1 class="text-4xl font-medium w-full text-center px-32">
                    <span class="text-yellow-500 font-bold">Cool Emu</span>
                    is a web based <br />
                    <div class="flex gap-2">
                        console emulator for
                        <div class="min-w-2 font-bold" id="text-rotator">
                            <span class="text-blue-600">NES</span>
                            <span class="text-green-600">SNES</span>
                            <span class="text-blue-600">Playstation</span>
                            <span class="text-red-600">Gameboy</span>
                        </div>
                    </div>
                </h1>
                <h2 class="text-center opacity-70 text-lg text-primary">
                    Currently supporting emulation of 2+ game consoles.
                </h2>
            </div>
            <p>
                Welcome to <strong>Cool Emu</strong>, a web based console
                emulator! On this site you can play all sorts of games from NES
                classics such as Super Mario Bros to PSP games like Patapon! All
                you need to do is head over to the respective games console and
                then put in the game ROM file.
            </p>
            <p>
                For legal reasons we don't host game ROMS, however we hope you
                can acquire the ROM of the game you are looking to play. Have
                fun! If you like this website, you can share it with others!
            </p>
        </div>
    </div>
</div>

<script>
    import { gsap } from "gsap";

    const container = document.getElementById("text-rotator");
    if (!container) throw new Error("text-rotator doesnt exist!");

    let words = Array.from(container.children as HTMLCollectionOf<HTMLElement>);

    let longest = 0;
    let height = words[0].getBoundingClientRect().height + 3;
    for (const [key, value] of words.entries()) {
        value.style.position = "absolute";
        value.style.transform = `translate(0,${key * height}px)`;
        if (value.textContent.length >= longest) {
            longest = value.textContent.length;
        }
    }
    container.style.width = `${longest * 20}px`;
    container.style.height = `${height}px`;

    // change over time
    setInterval(() => {
        words = Array.from(container.children as HTMLCollectionOf<HTMLElement>);

        // move the element at the top to the bottom
        let firstEl = words[0];
        words[0].remove();
        container.appendChild(firstEl);

        for (const [key, value] of words.entries()) {
            gsap.fromTo(
                value,
                {
                    translateY: key * height,
                },
                {
                    translateY: (key - 1) * height,
                },
            );
        }
    }, 1000);
</script>
