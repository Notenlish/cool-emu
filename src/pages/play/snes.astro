---
import Layout from "src/layouts/Layout.astro";
import { Label } from "$lib/components/ui/label";
import SaveIcon from "$assets/save.svg";
import Image from "astro/components/Image.astro";
import * as InputGroup from "$lib/components/ui/input-group/index.js";
---

<Layout>
    <div class="container mx-auto mt-12">
        <p>Emulating SNES games on web is cool</p>

        <div class="grid w-full max-w-sm items-center gap-1.5 h-12 mb-12">
            <Label class={"text-base "} for="romInput">Enter SNES ROM:</Label>
            <InputGroup.Root>
                <InputGroup.Input
                    class="leading-6"
                    id="romInput"
                    type="file"
                    accept=".snes,.rom,.sfc"
                />
                <InputGroup.Addon
                    class={"p-0 m-0 w-12 h-12 min-w-12 size-12 text-black"}
                >
                    <SaveIcon width={64} height={64} class={"size-8"} />
                </InputGroup.Addon>
            </InputGroup.Root>
        </div>

        <div style="width:640px;height:480px;max-width:100%">
            <div id="game"></div>
        </div>
    </div>
</Layout>

<script type="text/javascript">
    const input = document.getElementById("romInput");

    input.addEventListener("change", (e) => {
        console.log(e);
        console.log(e.target);
        const file = input.files[0];
        if (!file) console.log("File not found!");

        const blobUrl = URL.createObjectURL(file);

        EJS_player = "#game";
        // Can also be fceumm or nestopia
        EJS_core = "snes";

        // URL to BIOS file
        // EJS_biosUrl = "https://archive.org/download/disksys_202501/disksys.rom";
        EJS_biosUrl = "";

        // URL to Game rom
        EJS_gameUrl = blobUrl;

        // Path to the data directory
        EJS_pathtodata = "data/";
        EJS_DEBUG_XX = true;
        EJS_language = "en-US";

        const scriptTag = document.createElement("script");
        scriptTag.src = "data/loader.js";
        document.body.appendChild(scriptTag);
    });
</script>

